# Variabili d'ambiente di esempio (copia in .env e personalizza)

# Opzione 1: Connection string (es. Neon, Supabase, Railway)
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# Opzione 2: Variabili separate (sviluppo locale con Docker)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=staticdb

# TypeORM: auto-crea/aggiorna tabelle (true) o usa migrations (false)
DB_SYNCHRONIZE=true

PORT=3000
NODE_ENV=development
